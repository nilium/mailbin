#!/bin/bash
scan=0
if [ -t 1 ]; then
  scan=1
fi

sortflag=
cutcmd=
cutflag=
format=

greps=()
for arg; do
  shift
  case "$arg" in
  +*)
    arg="${arg#+}"
    format+="${format:+${arg:+ }}${arg}"
    shift
    ;;
  %*)
    format+="${format:+${arg:+ }}${arg}"
    shift
    ;;
  -L)
    scan=1
    shift
    ;;
  -l)
    scan=0
    shift
    ;;
  ,[rfdsFMSUI]*)
    sortflag+=${arg#,}
    ;;
  -[0-9]*)
    cutflag=-n$arg
    cutcmd=tail
    ;;
  +[0-9]*)
    cutflag=-n$arg
    cutcmd=head
    ;;
  /:*|*[a-zA-Z]:*)
    greps[${#greps[@]}]="$arg"
    ;;
  *)
    echo "unrecognized argument: $arg" >&2
    exit 1
    ;;
  esac
done

: ${sortflag:=${MLS_DEFAULT_SORT-dU}}

m:scan() {
  if [ "$scan" != 1 ] && [ -z "$format" ]; then
    cat
    return $?
  fi
  if [ -z "$format" ]; then
    mscan -f '%c%u%r\t%-3n\t%10d\t%17f\t%t %2i%s' |
      column -s $'\t' -o ' | ' -et -N '-,#,DATE,FROM,SUBJECT'
  else
    mscan ${format:+-f "$format"}
  fi
}

m:agrep() {
  if [[ "$1" != *[a-z/]:*[A-Z]* ]]; then
    set -- -i "$@"
  fi
  magrep "$@"
}
export -f m:agrep

m:grep() {
  if [ ${#greps[@]} = 0 ]; then
    cat
    return $?
  fi
  rere m:agrep -- "${greps[@]}"
}

m:cut() {
  if [ -z "${cutcmd}" ]; then
    cat
    return $?
  fi
  $cutcmd $cutflag
}

m:grep | msort ${sortflag:+-${sortflag}} | m:scan | m:cut
